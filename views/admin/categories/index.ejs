<%- include ('../../partials/heater.ejs') %>
<%- include ('../../partials/nav.ejs') %>
<div class="container">
    <hr>
    <h2> Categorias </h2>
    <a href="/admin/categories/new" class="btn btn-primary"> Criar nova categoria</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>     
            <% categories.forEach(category =>{ %>
                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.title %></th>
                    <th><%= category.slug %></th>
                    <th>
                        <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Editar</a>
                        <form method="post" action="/categories/delete" style="display: inline;" onsubmit="formDelet(event, this)">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include ('../../partials/footer.ejs') %>
<script>
    function formDelet(event, form){
        event.preventDefault()
        let desision = confirm("Você quer deletar essa categoria?")
        if(desision){
            form.submit(); 
        }
    }
</script>